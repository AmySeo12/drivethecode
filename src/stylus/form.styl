.btn-lyft
    background-color hot-pink
    color #fff
    transition .3s
    margin-top 6px
    width 100%
    padding 3%
    border-radius 8px
.btn-lyft:hover
    background-color mulberry
    color #fff
.rate-container
    position absolute
    z-index 100
.rate-form
    color #000
.rate-form input
    width 100%
    border 2px solid transparent
.rate-form input:focus
    outline 0px
.rate-form .input-conector
    position absolute
    top 59px
    bottom 90px
    left 15.5px
    width 1px
    background-color #C6C6C6

.rate-form .input-conector:after, .rate-form .input-conector:before
    content ''
    position absolute
    left -2px
    width 5px
    height 5px
    border-radius 50%
.rate-form .input-conector:before
    bottom -3.5px;
    background-color mulberry;
    border 3px solid mulberry;
.rate-form .input-conector:after
    top: 1px;
    background-color: hot-pink;
    border: 3px solid hot-pink;

.header-txt
    background-color white
    padding 7%
    border-radius 10px
    box-shadow 0px 8px 6px -6px #CCCAC7;
    border 1px solid #CCCAC7
.header-txt h1
    color hot-pink
    font-size 14px
    margin-top 0px
    text-align center
